{
  "name": "__MSG_appName__",
  "version": "0.0.6.8",
  "manifest_version": 2,
  "minimum_chrome_version": "33.0",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "default_locale": "en_US",
  "app": {
    "background": {
      "scripts": ["launch.js"]
    }
  },
  //"options_page": "options.htm",
  //"update_url": "http://path/to/updateInfo.xml",
  "sockets": {
    "tcp" : {
      "connect": "*:*"
    },
    "tcpServer" : {
      "listen" : ":*"
    }
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "unlimitedStorage"
  ]
}
